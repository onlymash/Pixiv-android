<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".activities_re.FreeActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:navigationIcon="@drawable/ic_arrow_back_black_two_24dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="零境交错"
            app:titleTextColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen_dip"
            android:text="前言：Pixiv (beta) 前期的联网策略失效，为了让大家可以继续使用pixiv，我们租用了一台VPS供大家使用，现在这台VPS由于过多人使用已被封， 已被封，已被封，所以以后请你们自行寻找代理工具，或者学习如何自己搭建VPS" />

        <TextView
            android:id="@+id/key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sixteen_dip"
            android:layout_marginEnd="@dimen/sixteen_dip"
            android:layout_marginBottom="@dimen/sixteen_dip"
            android:autoLink="all"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="https://segmentfault.com/a/1190000015725355"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sixteen_dip"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:text="@string/app_qun" />


        <TextView
            android:id="@+id/join_app_qun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen_dp"
            android:text="@string/join_app_qun"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</ScrollView>